<!DOCTYPE html>
<html>
<head>
  <title>Product List</title>
  <style>
    /* Optional: Add some basic styling */
    .product-item {
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 10px;
    }
    .product-image {
      max-width: 150px;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <h1>Product List</h1>
  <ul id="productList">
    {{#each products}}
      <li class="product-item">
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <p>Price: ${{this.price}}</p>
        <p>Category: {{this.category}}</p>
        <p>Stock: {{this.stock}}</p>
        <p>Status: {{#if this.status}}Available{{else}}Out of Stock{{/if}}</p>
        {{#each this.thumbnail}}
          <img class="product-image" src="{{this}}" alt="{{this.title}}">
        {{/each}}
      </li>
    {{/each}}
  </ul>
  <script src="/js/index.js"></script>
</body>
</html>
